<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Enter your email..." %>

        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Enter your pass..." %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm pass..." %>

        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<p>Find me in app/views/users/signup.html.erb</p>